					}
				]
			},
			{
				"tab": "For Server Owners",
				"groups": [
					{
						"group": "Get Started",
						"pages": ["owners/index"]
					}
				]
			},
			{
				"tab": "For Developers",
				"groups": [
					{
						"group": "Get Started",
						"pages": ["devs/index"]
					}
				]
			},
			{
				"tab": "API Reference",
				"groups": [
					{
						"group": "API Documentation",
						"pages": ["api-reference/introduction"]
					},
					{
						"group": "Internal API",
						"openapi": {
							"source": "https://raw.githubusercontent.com/MinecraftAuthentication/openapi/refs/heads/main/internal_api.json",
